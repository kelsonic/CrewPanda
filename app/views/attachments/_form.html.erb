<%= form_for @attachment, :html => { :class => "form-horizontal attachment" } do |f| %>

    <% if @attachment.errors.any? %>
    <div id="error_expl" class="panel panel-danger margin-top">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@attachment.errors.count, "error") %> prohibited this attachment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @attachment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :upload, value: 'File to upload', :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :upload %>
    </div>
  </div>
  <br/>
  <%= f.hidden_field :project_id %>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            tenant_project_path(tenant_id: Tenant.current_tenant_id, 
                                id: @attachment.project_id), :class => 'btn btn-default' %>

<% end %>