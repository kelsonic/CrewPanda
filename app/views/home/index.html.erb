<% if current_user %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3 class="text-center"><%= @tenant.name %></h3>
        <%= render 'projects/list' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="home-bg">
    <div class="container">
      <div class="row">
        <div class="blank div"></div>
        <div class="text-center">
          <h1>Welcome to Crew Panda</h1>
          <p>where scheduling becomes simple.</p>
        </div>
        <div class="col-lg-12">
          <div class="row">
            <div class="plans clearfix">
              <div class="col-lg-3 col-lg-offset-3 plan">
                <h2>Free Plan</h2>
                <div class="price pull-right">
                  Price: Free
                </div>
                <div class="features">
                  <ul>
                    <li>Unlimited file uploads</li>
                    <li>Responsive design</li>
                    <li>Access anywhere</li>
                    <li>1 project</li>
                  </ul>
                </div>
                <p>
                  <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>
                </p>
              </div>
              <div class="col-lg-3 plan">
                <h2>Premium Plan</h2>
                <div class="price pull-right">
                  Price: $10
                </div>
                <div class="features">
                  <ul>
                    <li>Unlimited file uploads</li>
                    <li>Responsive design</li>
                    <li>Access anywhere</li>
                    <li class='extra'>Unlimited projects</li>
                  </ul>
                </div>
                <p>
                  <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>