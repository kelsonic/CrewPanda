<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<% if @projects.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:deadline) %></th>
        <th><%= model_class.human_attribute_name(:details) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.title, tenant_project_path(project, tenant_id: @tenant.id), class: "main-link" %></td>
          <td>
            <% if project.deadline %>
              <%= project.deadline %>
            <% else %>
              None
            <% end %>
          </td>
          <td><%= project.details %></td>
          <td>
            <%= link_to 'View', tenant_project_path(project, tenant_id: @tenant.id), class: "btn btn-primary btn-sm" %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_tenant_project_path(project, tenant_id: @tenant.id), :class => 'btn btn-warning btn-sm' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        tenant_project_path(project, tenant_id: @tenant.id),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="lead">You don't have any projects... yet.</p>
<% end %>

<% if @tenant.can_create_projects? %>
  <%= link_to "New Project", new_tenant_project_path(tenant_id: @tenant.id), class: 'btn btn-primary' %>
<% end %>